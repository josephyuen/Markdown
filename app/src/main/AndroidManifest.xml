<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nzf.markdown">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".app.MDApplication"
        android:allowBackup="true"
        android:icon="@drawable/markdown"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="app.com.thetechnocafe.kotlinweather.Home.HomeActivity"
            android:theme="@style/AppTheme.FullScreen"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.editor.EditorActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".web.ResultWebViewActivity" />
        <activity android:name=".video.MainActivity"/>
        <!--<activity android:name=".video.VideoListActivity" />-->
        <service android:name=".video.player.PlaybackService" />
    </application>

</manifest>