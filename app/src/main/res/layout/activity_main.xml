<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nzf.markdown.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="?attr/colorAccent"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_main_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <FrameLayout
            android:id="@+id/fl_main_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/ll_main_setting"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#E2FFFFFF"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:headerLayout="@layout/ngv_header_layout"
            app:menu="@menu/ngv_main_layout"
            />

    </android.support.v4.widget.DrawerLayout>

</LinearLayout>

